{
  "Application": {
    "Title": "STL Viewer",
    "Version": "1.0.0",
    "ShowDebugInfo": false,
    "DefaultWindowWidth": 1200,
    "DefaultWindowHeight": 800
  },
  "Rendering": {
    "DefaultRenderer": "OpenGL",
    "AntiAliasing": 4,
    "VSync": true,
    "MaxFrameRate": 60
  },
  "Logging": {
    "MinimumLevel": "Information",
    "WriteToFile": true,
    "WriteToConsole": true,
    "FilePathTemplate": "logs/stlviewer-.txt"
  },
  "ConnectionStrings": {
    "ApiBaseUrl": "https://localhost:5001/"
  },
  "Features": {
    "EnablePerformanceMonitoring": true,
    "EnableCloudSync": false,
    "EnableExperimentalFeatures": false
  },
  "FileHandling": {
    "MaxFileSizeMB": 100,
    "SupportedFormats": ["stl", "STL"],
    "RecentFilesCount": 10,
    "AutoBackup": true,
    "BackupIntervalMinutes": 30
  },
  "Camera": {
    "DefaultFov": 45.0,
    "NearPlane": 0.1,
    "FarPlane": 1000.0,
    "MovementSpeed": 1.0,
    "RotationSpeed": 1.0,
    "ZoomSpeed": 1.0
  },
  "Material": {
    "DefaultPreset": "Default",
    "EnableTransparency": true,
    "DefaultColor": "#C0C0C0",
    "DefaultAlpha": 1.0
  },
  "Performance": {
    "EnableFpsCounter": true,
    "EnableMemoryMonitoring": true,
    "MaxTrianglesBeforeWarning": 1000000,
    "EnableLevelOfDetail": false
  },
  "Export": {
    "DefaultImageFormat": "PNG",
    "DefaultImageQuality": 90,
    "DefaultImageWidth": 1920,
    "DefaultImageHeight": 1080,
    "EnableBatchExport": true
  },
  "UserInterface": {
    "Theme": "Dark",
    "AccentColor": "#0078D4",
    "FontSize": 12,
    "ShowTooltips": true,
    "EnableAnimations": true,
    "LanguageCode": "en-US"
  }
}
